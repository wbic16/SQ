[Unit]
Description=SQ Backend - demo (Test Account)
Documentation=https://github.com/wbic16/SQ/blob/main/ROUTER.md
After=network.target
Requires=network.target

[Service]
Type=simple
User=sq
Group=sq
WorkingDir=/var/lib/sq/tenants/demo
ExecStart=/usr/local/bin/sq host 1339 \
    --key REPLACE_WITH_ACTUAL_TOKEN \
    --data-dir /var/lib/sq/tenants/demo
Restart=on-failure
RestartSec=5s

# Security hardening
NoNewPrivileges=true
PrivateTmp=true
ProtectSystem=strict
ProtectHome=true
ReadWritePaths=/var/lib/sq/tenants/demo

# Resource limits
LimitNOFILE=65536
TasksMax=512
MemoryMax=2G

# Logging
StandardOutput=journal
StandardError=journal
SyslogIdentifier=sq-backend-demo

[Install]
WantedBy=multi-user.target
